<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:context="com.example.silvaf.calculadora.MainActivity">

    <RelativeLayout
        android:layout_width="420dp"
        android:layout_height="532dp"
        android:layout_marginRight="-4dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="-4dp">

        <EditText
            android:id="@+id/txtValor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Segundo Valor"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColorHint="@android:color/black"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="199dp"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/txtValor1"
            android:layout_alignStart="@+id/txtValor1"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btLimpar"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/btCalcular"
            android:layout_toEndOf="@+id/textView6"

            android:layout_toRightOf="@+id/textView6"
            android:background="@android:color/holo_green_dark"
            android:elevation="0dp"
            android:text="Limpar"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="246dp"
            tools:layout_editor_absoluteY="322dp" />

        <Button
            android:id="@+id/btCalcular"
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_above="@+id/textView6"
            android:layout_marginBottom="21dp"
            android:layout_toLeftOf="@+id/textView5"
            android:layout_toStartOf="@+id/textView5"
            android:backgroundTint="@android:color/holo_green_dark"
            android:text="Calcular a Soma"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="322dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/resutado"
            android:layout_marginBottom="34dp"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:text="="
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="184dp"
            tools:layout_editor_absoluteY="360dp" />

        <TextView
            android:id="@+id/legenda1"
            android:layout_width="335dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="16dp"
            android:text="Atribua Valores Para a Soma"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/txtValor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:ems="10"
            android:hint="Primeiro Valor"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColorHint="@android:color/background_dark"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="82dp"
            android:layout_below="@+id/legenda1"
            android:layout_alignLeft="@+id/legenda1"
            android:layout_alignStart="@+id/legenda1"
            android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="152dp"
            android:text="+"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="184dp"
            tools:layout_editor_absoluteY="143dp" />

        <TextView
            android:id="@+id/resutado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtValor2"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/txtValor2"
            android:layout_marginBottom="65dp"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:text="Resultado"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="-52dp"
            tools:layout_editor_absoluteY="40dp" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/resutado"
            android:layout_alignStart="@+id/resutado"
            android:layout_marginBottom="34dp"
            android:layout_alignRight="@+id/txtValor2"
            android:layout_alignEnd="@+id/txtValor2" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>